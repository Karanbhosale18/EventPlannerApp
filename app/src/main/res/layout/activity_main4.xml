<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity4"
    >
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        app:headerLayout="@layout/headerfile"
        app:menu="@menu/menu"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#A06BFD"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Toolbar"
            app:titleMarginStart="10dp"
            app:titleTextColor="#FFFFFF"
            tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_span="2"
        android:background="@drawable/dashboarddesign"
        android:gravity="center"
        android:text="DASHBOARD"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="330dp"
        android:src="@drawable/baseline_menu_24"></ImageView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="210dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:id="@+id/BirthdayEvent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2"
            android:background="@drawable/birthday1_dashboard" />
        <ImageButton
            android:id="@+id/WeddingEvent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/wedding_1dashboard" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIRTHDAY EVENT"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEDDING EVENT"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="210dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="390dp"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:id="@+id/WeddingAnniversaryEvent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/award_ceremony_dashboard_1" />

        <ImageButton
            android:id="@+id/FamilyEvent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="@drawable/anniversary_dashboard_1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANNIVERSARY EVENT"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AWARDS CEREMONIES"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="210dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="620dp"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageButton
            android:id="@+id/vipevent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_span="2"
            android:layout_weight="2"
            android:background="@drawable/company_parties_dashboard_1" />

        <ImageButton
            android:id="@+id/about"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/about" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPANY PARTIES"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT APK"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>